<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp"
    >
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark"这是主题-->
    <ImageView
        android:background="#f07"
        android:layout_marginTop="16dp"
        android:id="@+id/first_imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        />
    <TextView
        android:id="@+id/first_username"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="这里显示用户名"
         />
    <TextView
        android:textColor="#fff"
        android:id="@+id/first_nickname"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="这里显示用户昵称" />
</LinearLayout>
