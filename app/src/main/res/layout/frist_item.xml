<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/frist_layout"
            android:background="@color/login_registerBlackFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:layout_gravity="center"
                android:id="@+id/fragment1_headimg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="96dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="96dp" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <LinearLayout
                        android:id="@+id/xing"
                        android:layout_width="48dp"
                        android:layout_height="48dp">
                    <ImageView

                        android:layout_gravity="center"
                        android:background="@drawable/icon_woman"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        />
                    </LinearLayout>
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/fragment1_uid"
                        android:layout_toRightOf="@id/xing"
                        android:textSize="@dimen/text_large"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="小妞哎泡汤"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/fragment1_city"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_large"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="北京"/>

                </RelativeLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/fragment1_time"
                    android:paddingLeft="@dimen/distance_more"
                    android:paddingTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/fragment1_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment1_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/login_registerBlackFont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_bigger">
        <ImageView
            android:id="@+id/comment"
            android:gravity="center"
            android:background="@drawable/icon_talk"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/fragment1_comment"
            android:gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="36dp"  />
        <ImageView
            android:id="@+id/readcount"
            android:gravity="center"
            android:background="@drawable/icon_heart"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/fragment1_readcount"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/share"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_share"
                android:layout_width="36dp"
                android:layout_height="36dp"
                />

        </RelativeLayout>


    </LinearLayout>




</LinearLayout>
