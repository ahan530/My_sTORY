<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/mystory_time1"
                android:background="@color/colorPicBackground"
                android:text="我是日期"
                android:textSize="28sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="36sp" />
            <TextView
                android:text="我是时间"
                android:gravity="center_vertical"
                android:id="@+id/mystory_time2"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="36sp" />


        </LinearLayout>
        <TextView
            android:id="@+id/mystory_info"
            android:paddingLeft="4dp"
            android:text="我是文本信息"
            android:background="@color/colorPicBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mystory_recycle"
            android:background="@color/colorPicBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_bigger">
        <ImageView
            android:gravity="center"
            android:background="@drawable/icon_talk"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:text="评论"
            android:id="@+id/mystory_comment"
            android:gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="36dp" />
        <ImageView
            android:gravity="center"
            android:background="@drawable/icon_heart"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:text="阅读量"
            android:id="@+id/mystory_readcount"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mystory_share"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_share"
                android:layout_width="36dp"
                android:layout_height="36dp" />

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>
