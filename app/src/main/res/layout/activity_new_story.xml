<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qf.com.my_story.view.NewStoryActivity">
    <android.support.v7.widget.Toolbar
        android:background="@drawable/title_bg"
        android:id="@+id/myStory_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="新的故事"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/newstory_back"
            android:src="@drawable/fanhui"
            android:layout_width="@dimen/actionBar_widget_both"
            android:layout_height="@dimen/actionBar_widget_both" />
        <ImageView
            android:layout_marginRight="@dimen/distance_medium"
            android:layout_gravity="right"
            android:id="@+id/newstory_send"
            android:src="@drawable/icon_send"
            android:layout_width="@dimen/actionBar_widget_both"
            android:layout_height="@dimen/actionBar_widget_both" />
    </android.support.v7.widget.Toolbar>


       <EditText
           android:layout_below="@id/myStory_toolbar"
           android:id="@+id/newstory_et"
           android:hint="分享下此刻你的心情"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/newstory_et"
        android:background="#f07"
        android:id="@+id/newstory_showimg"
        android:layout_width="200dp"
        android:layout_height="300dp" />






    <LinearLayout
       android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_lager">
        <RelativeLayout
            android:background="#2A2A2A"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/distance_lager">
            <ImageView
                android:id="@+id/newstory_image"
                android:layout_centerInParent="true"
                android:src="@drawable/image"
                android:layout_width="@dimen/icon_more_both"
                android:layout_height="@dimen/icon_more_both" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#2A2A2A"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/distance_lager">
            <ImageView
                android:id="@+id/newstory_camera"
                android:src="@drawable/xiangji"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/icon_more_both"
                android:layout_height="@dimen/icon_more_both" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
